{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "stylelint-config-ns",
  "description": "Stylelint config with pre-configured Sass (`.scss`), Tailwind, CSS-in-JS (`.ts` and `.tsx`), PostCSS and Prettier support.",
  "version": "1.0.0",
  "author": {
    "name": "Stefan Natter",
    "url": "https://natterstefan.me"
  },
  "license": "MIT",
  "main": "index.js",
  "engines": {
    "node": "^18.0.0 || ^20.0.0"
  },
  "scripts": {
    "lint": "yarn eslint --ext .js,.ts,.tsx .",
    "prepublish": "yarn test",
    "test": "stylelint example"
  },
  "peerDependencies": {
    "prettier": "^3.0.0",
    "stylelint": "^15.10.2",
    "tailwindcss": "^3.3.3"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    },
    "tailwindcss": {
      "optional": true
    }
  },
  "dependencies": {
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "postcss": "^8.4.27",
    "postcss-scss": "^4.0.6",
    "postcss-syntax": "^0.36.2",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^13.0.0"
  },
  "devDependencies": {
    "eslint": "^8.46.0",
    "eslint-config-ns": "^4.0.0",
    "prettier": "^3.0.0",
    "stylelint": "^15.10.2",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "files": [
    "index.js",
    "stylelint.config.js"
  ],
  "keywords": [
    "stylelint",
    "stylelint-config",
    "stylelint-prettier",
    "stylelint-eslint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/natterstefan/stylelint-config-ns.git"
  },
  "bugs": {
    "url": "https://github.com/natterstefan/stylelint-config-ns/issues"
  },
  "homepage": "https://github.com/natterstefan/stylelint-config-ns#readme"
}
